<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_green_dark"
    tools:context="ac.id.poligon.pelanggar.report.activity.Lapor">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pelanggaran Siswa"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:cardCornerRadius="30dp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/grey"

            >

            <Spinner
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/nis"
                android:layout_gravity="center"

                android:layout_marginTop="25dp"/>

            <Spinner
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/jenis"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>
            <EditText
                android:inputType="text"
                android:id="@+id/teksketerangan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/customedit"
                android:drawablePadding="12dp"
                android:textColorHint="@color/grey"
                android:hint="keterangan"
                android:paddingStart="12dp"
                android:textColor="@color/black"
                android:paddingEnd="12dp" />
            <EditText
                android:inputType="text"
                android:id="@+id/tanggal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/customedit"
                android:drawablePadding="12dp"
                android:textColorHint="@color/grey"
                android:hint="Tanggal"
                android:textColor="@color/black"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btntanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tanggal"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom1"
                android:layout_marginLeft="15dp"/>



            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:id="@+id/btnlapor"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="LAPOR"
                android:textSize="20dp"
                android:textColor="#ffff"
                android:background="@drawable/custom1"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>